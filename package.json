{
  "name": "ckpt-inspector",
  "displayName": "Checkpoint Inspector",
  "description": "Inspecting safetensors / pt / pth files with tensor information & metadata",
  "version": "0.1.0",
  "publisher": "oplia",
  "repository": {
    "type": "git",
    "url": "https://github.com/onlca/ckpt-inspector.git"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ckpt-inspector.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ckpt-inspector.openSafetensors",
        "title": "Open with Safetensors Inspector",
        "category": "Checkpoint Inspector"
      },
      {
        "command": "ckpt-inspector.openPyTorch",
        "title": "Open with PyTorch Inspector",
        "category": "Checkpoint Inspector"
      }
    ],
    "customEditors": [
      {
        "viewType": "ckpt-inspector.safetensors",
        "displayName": "Safetensors Inspector",
        "selector": [
          {
            "filenamePattern": "*.safetensors"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "ckpt-inspector.pytorch",
        "displayName": "PyTorch Model Inspector",
        "selector": [
          {
            "filenamePattern": "*.pt"
          },
          {
            "filenamePattern": "*.pth"
          }
        ],
        "priority": "default"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ckpt-inspector.openSafetensors",
          "when": "resourceExtname == .safetensors",
          "group": "navigation"
        },
        {
          "command": "ckpt-inspector.openPyTorch",
          "when": "resourceExtname == .pt || resourceExtname == .pth",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.0",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "python-shell": "^5.0.0"
  }
}
